<div id="<%= dom_id conversation %>" class="card-body">
  <div class="row">
    <div class="col">
      <div class="d-flex align-items-center mb-3">
        <span class="avatar me-2 bg-primary-lt">
          <%= conversation.email_contact.first.upcase %>
        </span>
        <div>
          <div class="fw-bold"><%= conversation.email_contact %></div>
          <div class="text-muted small">Email Contact</div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-6">
      <div class="text-muted small mb-1">Classification</div>
      <span class="badge bg-<%= case conversation.classification
                                           when 'scammer' then 'danger'
                                           when 'legitimate' then 'success'
                                           when 'unknown' then 'warning'
                                           else 'secondary'
                                           end %> text-white fs-6">
        <%= conversation.classification.capitalize %>
      </span>
    </div>
    <div class="col-6">
      <div class="text-muted small mb-1">Status</div>
      <span class="badge bg-<%= conversation.status == 'active' ? 'success' : 'secondary' %> text-white fs-6">
        <%= conversation.status.capitalize %>
      </span>
    </div>
  </div>

  <div class="mt-3 pt-3 border-top">
    <div class="text-muted small">Email Account</div>
    <div class="fw-medium"><%= conversation.email_account.email %></div>
  </div>
</div>
