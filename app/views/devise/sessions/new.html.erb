<%= render "shared/auth_card", title: "Login to your account", links: render("devise/shared/links") do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
    </div>
    <div class="mb-2">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Your password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-2">
        <label class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <span class="form-check-label">Remember me on this device</span>
        </label>
      </div>
    <% end %>
    <div class="form-footer">
      <%= f.submit "Sign in", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
<% end %>
