<% content_for :title, "Email accounts" %>
<% content_for :page_actions do %>
  <%= link_to "New email account", new_email_account_path, class: "btn btn-primary" %>
<% end %>

<%= render "shared/page_header", title: "Email accounts" %>

<div id="email_accounts" class="row row-cards">
  <% @email_accounts.each do |email_account| %>
    <div class="col-md-6 col-lg-4">
      <div class="card">
        <%= render email_account %>
        <div class="card-footer">
          <%= link_to "Edit this account", edit_email_account_path(email_account), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
