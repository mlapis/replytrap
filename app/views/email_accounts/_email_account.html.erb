<div id="<%= dom_id email_account %>" class="card-body">
  <div class="d-flex align-items-center mb-3">
    <span class="avatar me-2 bg-blue-lt">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><rect x="3" y="5" width="18" height="14" rx="2" /><polyline points="3,7 12,13 21,7" /></svg>
    </span>
    <div>
      <div class="fw-bold"><%= email_account.email %></div>
      <div class="text-muted small">Email Account</div>
    </div>
  </div>

  <div class="row g-2 mb-3">
    <div class="col-12">
      <div class="card bg-light">
        <div class="card-body p-2">
          <div class="text-muted small mb-1">Server Configuration</div>
          <div class="small">
            <strong>Fetch:</strong> <%= email_account.fetch_server %><br>
            <strong>SMTP:</strong> <%= email_account.smtp_server %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-4">
      <div class="text-muted small mb-1">Protocol</div>
      <span class="badge bg-info text-white fs-6">
        <%= email_account.fetch_protocol&.upcase %>
      </span>
    </div>
    <div class="col-4">
      <div class="text-muted small mb-1">Status</div>
      <span class="badge bg-<%= email_account.status == 'connected' ? 'success' : 'warning' %> text-white fs-6">
        <%= email_account.status&.capitalize || 'Unknown' %>
      </span>
    </div>
    <div class="col-4">
      <div class="text-muted small mb-1">Active</div>
      <span class="badge bg-<%= email_account.active ? 'success' : 'secondary' %> text-white fs-6">
        <%= email_account.active ? 'Yes' : 'No' %>
      </span>
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-12">
      <div class="text-muted small mb-1">AI Persona</div>
      <div class="fw-medium"><%= email_account.persona.name %></div>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-12">
      <div class="text-muted small mb-1">Username</div>
      <div class="fw-medium"><%= email_account.username %></div>
    </div>
    <% if email_account.last_checked_at %>
      <div class="col-12">
        <div class="text-muted small">Last checked <%= time_ago_in_words(email_account.last_checked_at) %> ago</div>
      </div>
    <% end %>
  </div>

  <% if email_account.error_message.present? %>
    <div class="mt-3 pt-3 border-top">
      <div class="alert alert-danger alert-sm m-0">
        <strong>Error:</strong> <%= email_account.error_message %>
      </div>
    </div>
  <% end %>
</div>
