<div id="<%= dom_id persona %>" class="card-body">
  <%= link_to persona, class: "d-flex align-items-center mb-3 text-decoration-none" do %>
    <span class="avatar me-2 bg-green-lt">
      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="7" r="4" /><path d="m6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" /></svg>
    </span>
    <div>
      <div class="fw-bold text-primary"><%= persona.name %></div>
      <div class="text-muted small">AI Persona</div>
    </div>
  <% end %>

  <div class="card bg-light">
    <div class="card-body p-3">
      <div class="text-muted small mb-2">Description</div>
      <div class="text-dark"><%= simple_format(persona.description) %></div>
    </div>
  </div>
</div>
